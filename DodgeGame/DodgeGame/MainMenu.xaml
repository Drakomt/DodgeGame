<Window x:Class="DodgeGame.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DodgeGame"
        mc:Ignorable="d"
        Title="MainMenu" Background="LightBlue" Height="600" Width="500">
    <Canvas>
        <Label Content="DodgeGame" HorizontalAlignment="Left" VerticalAlignment="Top" Height="102" Width="268" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Snap ITC" FontSize="39" Canvas.Left="101" Canvas.Top="59"/>
        <Label Content="Version: 1.0" Canvas.Top="533" Height="32" Width="92" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="New Game" Tag="StartButton" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="180" Click="StartButton_Click" Canvas.Left="145" Canvas.Top="207"/>
        <Button Content="Exit" Tag="ExitButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="180" Click="ExitButton_Click" Canvas.Left="145" Canvas.Top="387"/>
        <Button Content="Load Game" Tag="LoadGameButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Width="180" Click="LoadGameButton" Canvas.Left="145" Canvas.Top="301"/>

    </Canvas>
</Window>
